<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff111111">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



        <android.support.v7.widget.CardView
            android:id="@+id/card"
            android:layout_width="fill_parent"
            android:layout_height="230sp"
            android:layout_margin="8sp"
            android:padding="15sp"
            card_view:cardElevation="4sp"
            card_view:cardBackgroundColor="#ff212121">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8sp"
                xmlns:android="http://schemas.android.com/apk/res/android">


                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="30sp"
                    android:text="Introduction:"

                    android:id="@+id/intr"
                    android:textColor="#fdd835"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:layout_marginLeft="30sp"
                    android:textStyle="bold"/>

                <ImageView
                    android:layout_below="@+id/intr"
                    android:layout_width="120sp"
                    android:layout_height="180sp"
                    android:src="@drawable/vi"
                    android:layout_alignParentTop="true"
                    android:id="@+id/viv"/>


                <TextView
                    android:layout_width="500sp"
                    android:layout_height="100sp"
                    android:text="@string/ab"
                    android:textColor="#FFFFFFFF"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_toEndOf="@+id/viv"
                    android:layout_toRightOf="@+id/viv"
                    android:id="@+id/textView"
                    android:layout_below="@+id/intr"
                    android:layout_alignBottom="@+id/viv">


                </TextView>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/bu"
                    android:layout_below="@+id/textView"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentBottom="true">

                    <Button
                        android:layout_width="100sp"
                        android:layout_height="wrap_content"
                        android:background="#00000000"
                        android:textColor="#fdd835"
                        android:text="Facebook"
                        android:layout_marginTop="10sp"
                        android:layout_alignParentLeft="true"
                        android:textStyle="bold"
                        android:id="@+id/facebook"/>

                    <Button
                        android:layout_width="100sp"
                        android:layout_height="wrap_content"
                        android:background="#00000000"
                        android:textColor="#fdd835"
                        android:text="Google+"
                        android:layout_marginBottom="-3sp"
                        android:textStyle="bold"
                        android:id="@+id/google"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true" />

                    <Button
                        android:layout_width="60sp"
                        android:layout_height="50sp"
                        android:background="#00000000"
                        android:textColor="#fdd835"
                        android:text="Twitter"
                        android:textStyle="bold"
                        android:id="@+id/twitter"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true" />

                </RelativeLayout>

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/card2"
            android:layout_width="fill_parent"
            android:layout_height="130sp"
            android:layout_margin="8sp"
            android:padding="15sp"
            card_view:cardElevation="4sp"
            card_view:cardBackgroundColor="#ff212121">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8sp">


                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="30sp"
                    android:text="My apps on the PlayStore"
                    android:id="@+id/intr2"
                    android:textColor="#fdd835"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="500sp"
                    android:layout_height="100sp"
                    android:text="I have several applications on the play store. Click this card to check them out :D"
                    android:textColor="#FFFFFFFF"
                    android:textSize="15sp"
                    android:layout_below="@+id/intr2"
                    android:layout_marginTop="20sp"
                    android:gravity="center"
                    >


                </TextView>


            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/xda"
            android:layout_width="fill_parent"
            android:layout_height="130sp"
            android:layout_margin="8sp"
            android:padding="15sp"
            card_view:cardElevation="4sp"
            card_view:cardBackgroundColor="#ff212121">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8sp">


                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="30sp"
                    android:text="My XDA Profile B)"
                    android:id="@+id/intr3"
                    android:textColor="#fdd835"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="500sp"
                    android:layout_height="wrap_content"
                    android:text="Click this card to Visit my XDA Profile"
                    android:textColor="#FFFFFFFF"
                    android:textSize="15sp"
                    android:layout_below="@+id/intr3"
                    android:layout_marginTop="20sp"
                    android:gravity="center"
                    >


                </TextView>


            </RelativeLayout>

        </android.support.v7.widget.CardView>
    </LinearLayout>

</RelativeLayout>